@model InvoiceTestApp.ViewModels.GetAmountPerChargeVM

@{
    ViewData["Title"] = "Index";
}

<form id="myForm" action="/InvoiceChart/GetAmounts" method="Post">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="year">Select Year:</label>
                <select class="form-control" name="year" id="year">
                </select>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="month">Select Month:</label>
                <select class="form-control" name="month" id="month">
                    <option value="1">January</option>
                    <option value="2">Febuary</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
            </div>
        </div>
        <div class="col"></div>
    </div>

    <button type="submit">Submit</button>

</form>

@section Scripts {
    <script>
        // get selectbox
        var selectBox = document.getElementById('year');
        // loop through years
        for (var i = new Date().getFullYear(); i >= new Date().getFullYear() - 5; i--) {
            // create option element
            var option = document.createElement('option');
            // add value and text name
            option.value = i;
            option.innerHTML = i;
            // add the option element to the selectbox
            selectBox.appendChild(option);
        }
    </script>
}
